<div class="filters">
  <form action="" method="post">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <div class="filter">
      <div class="lbl">Монстры</div>
      <div class="controls">
        <select name="filters[has_mobs]" value="<%= @filters[:has_mobs] %>">
          <option></option>
          <option value="yes">Есть</option>
          <option value="no">Нет</option>
        </select>
      </div>
    </div>
    <div class="filter">
      <div class="lbl">НПЦ</div>
      <div class="controls">
        <select name="filters[has_npc]" value="<%= @filters[:has_npc] %>">
          <option></option>
          <option value="yes">Есть</option>
          <option value="no">Нет</option>
        </select>
      </div>
    </div>
    <div class="filter">
      <div class="lbl">&nbsp;</div>
      <button type="submit" name="filters[apply]" value="1">Фильтровать</button>
      <button type="submit" name="filters[reset]" value="1">Сбросить фильтры</button>
    </div>
  </form>
  <div class="clearfix"></div>
</div>
