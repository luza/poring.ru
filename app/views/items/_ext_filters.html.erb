<div class="filters">
  <form action="" method="post">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <div class="filter">
      <div class="lbl">Тип</div>
      <div class="controls">
        <select name="filters[etc_type]" value="<%= @filters[:etc_type] %>">
          <option></option>
          <optgroup label="Расходные">
            <option value="1">Стрелы</option>
            <option value="2">Метательные ножи</option>
            <option value="3">Патроны (bullets)</option>
            <!--<option value="4">Патроны (shells)</option>-->
            <option value="5">Гранаты</option>
            <option value="6">Сюрикены (shuriken)</option>
            <option value="7">Кунаи (kunai)</option>
          </optgroup>
          <optgroup label="Питомцы">
            <option value="8">Приманки</option>
            <option value="9">Яйца</option>
            <option value="10">Аксессуары</option>
          </optgroup>
        </select>
      </div>
    </div>
    <div class="filter">
      <div class="lbl">Описание содержит</div>
      <div class="controls">
        <input type="text" style="width: 150px;" name="filters[descr_contains]" value="<%= @filters[:descr_contains] %>" />
      </div>
    </div>
    <div class="filter">
      <div class="lbl">&nbsp;</div>
      <button type="submit" name="filters[apply]" value="1">Фильтровать</button>
      <button type="submit" name="filters[reset]" value="1">Сбросить фильтры</button>
    </div>
  </form>
  <div class="clearfix"></div>
</div>
